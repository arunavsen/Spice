@model IEnumerable<MenuItem>

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 class="text-success">
                @Model.FirstOrDefault().Category.Name
            </h3>
        </div>
        
        @foreach (var item in Model)
        {
            <div class="border border-white rounded col-12" style="margin-bottom: 10px; margin-top: 10px; padding: 10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="100%" style="border-radius: 1px; border: 1px solid #bbb9b9"/>
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="" style="font-size: 21px; color: indigo">@item.Name</label>
                                @if (item.Spicyness == "1")
                                {
                                    <img srcset="/images/spicy1.png" title="Mild" />
                                }
                                @if (item.Spicyness == "2")
                                {
                                    <img srcset="/images/spicy2.png" title="Spicy" />
                                }
                                @if (item.Spicyness == "3")
                                {
                                    <img srcset="/images/spicy3.png" title="Very Spicy" />
                                }
                            </div>
                            <div class="col-4 text-right" style="color: maroon">
                                <h4>$@item.Price</h4>
                            </div>
                        </div>
                        <div class="row col-12 text-justify d-none d-md-block">
                            <span>@Html.Raw(@item.Description)</span>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>
}