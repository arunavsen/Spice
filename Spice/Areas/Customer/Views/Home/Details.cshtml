@model Spice.Models.ShoppingCart
@using Microsoft.AspNetCore.Razor.Language.Intermediate
@using Spice.Extension
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<form method="post">
    <div class="row border backgroundWhite">
        <div class="col-md-8">
            <h2>Item Details</h2>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="col-md-3 pb-4 d-md-none">
                <img width="100%" src="@Model.MenuItem.Image" style="border-radius: 5px; border: 1px solid #bbb9b9; margin-top: 70px;" />
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="MenuItem.Name" class="form-control bg-white" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Description" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.Raw(Model.MenuItem.Description)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Price" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.Price" class="form-control bg-white" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.CategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    @*<select id="CategoryId" asp-for="@Model.MenuItem.CategoryId" asp-items="Model.Categories.ToSelectListItem(Model.MenuItem.CategoryId)" class="form-control"></select>*@
                    <input readonly asp-for="MenuItem.Category.Name" class="form-control bg-white" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.SubCategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    @*<select id="SubCategoryId" asp-for="@Model.MenuItem.SubCategoryId" name="SubCategoryId" asp-items="@(new SelectList(string.Empty, "Id", "Name"))" class="form-control"></select>*@
                    <input readonly asp-for="MenuItem.SubCategory.Name" class="form-control bg-white" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Spicyness" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <select asp-for="MenuItem.Spicyness" readonly asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control bg-white"></select>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Count" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Count"  class="form-control bg-white" />
                </div>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success form-control" value="Add to Cart">Add to Cart</button>
                </div>
            </div>
        </div>
        <div class="col-md-3 offset-1 d-none d-md-block">
            <img width="100%" src="@Model.MenuItem.Image" style="border-radius: 5px; border: 1px solid #bbb9b9; margin-top: 70px;" />
        </div>


    </div>
    <input type="hidden" asp-for="MenuItemId" />

</form>

@section scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
